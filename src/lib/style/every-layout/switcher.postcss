/* The Switcher
-----------------------------------------------------------------------*/
.switcher {
	display: flex;
	flex-wrap: wrap;
	--gap: 1rem;
	--threshold: 30rem;
	--basis: calc(var(--threshold) - 100%);
	gap: var(--gap);
	& > * {
		flex-grow: 1;
		flex-basis: calc(var(--basis) * 999);
	}
}
