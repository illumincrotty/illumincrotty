/* The Center
-----------------------------------------------------------------------*/
.center {
	display: block;
	margin-left: auto;
	margin-right: auto;
	max-width: var(--measure);
}

.center-i {
	display: flex;

	max-width: var(--measure);
	margin-left: auto;
	margin-right: auto;

	flex-direction: column;
	align-items: center;
}
